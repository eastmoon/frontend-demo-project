@setlocal enableextensions enabledelayedexpansion
@echo off

:rename_packages
cd %~dp0
for /d /r %%a in (node_*) do (
	echo %%a
	cd %%a
	set COUNT=1
	for /d %%b in (*) do (
		set /a COUNT+=1
		rename "%%b" "b!COUNT!"
	)
) 

:rename_node_modules
echo Rename all node modules start ...
cd %~dp0
for /d /r %%a in (node_*) do (
	rename %%a "a"
) 

:delete all node modules
echo Delete all node modules start ...
cd %~dp0
rd /S /Q "a"



